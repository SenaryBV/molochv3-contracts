  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.0.0-beta.0",
    "@truffle/contract": "^4.3.13",
    "@truffle/hdwallet-provider": "1.2.2",
    "eth-sig-util": "^3.0.0",
    "ethereumjs-util": "^7.0.5",
    "ganache-cli": "^6.12.1",
    "keccak256": "^1.0.0",
    "truffle": "^5.2.6",
    "ts-generator": "^0.1.1",
    "web3-utils": "^1.3.5"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.10",
    "@smartdec/smartcheck": "^2.0.1",
    "apollo-fetch": "^0.7.0",
    "dotenv": "^8.2.0",
    "eth-gas-reporter": "^0.2.22",
    "ethers": "^5.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-beta.3",
    "solhint": "^3.3.2",
    "solidity-coverage": "^0.7.16",
    "truffle-abi": "^1.0.3"
  },
  "scripts": {
    "test": "jest --clearCache && jest --runInBand",
    "test:all": "jest --clearCache && jest test/core/daofactory.js test/core/registry.test.js test/adapters/ragequit.test.js test/adapters/guildkick.test.js test/adapters/financing.test.js test/adapters/distribute.test.js test/adapters/configuration.test.js test/adapters/managing.test.js test/adapters/tribute.test.js",
    "lint:fix": "prettier --write 'contracts/**/*.sol' 'test/**/*.test.js' '**/*.md'",
    "lint": "prettier --list-different 'contracts/**/*.sol' 'test/**/*.test.js' '**/*.md'",
    "compile": "truffle compile",
    "compile-abi": "truffle compile && truffle-abi",
    "codegen": "cd subgraph && npm ci && npm run codegen",
    "build": "cd subgraph && npm run build",
    "ganache": "ganache-cli --deterministic -p 8545 --networkId 1337",
    "migrate": "truffle migrate --network ganache"
  },
  "repository": {
    "type": "git",
